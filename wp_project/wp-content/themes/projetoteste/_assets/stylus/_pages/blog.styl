.site-blog{
    overflow: hidden
    padding-top: 100px

    &__header{

        > .container{
            display: flex
            justify-content: space-between
            align-items: center
            flex-wrap: wrap
            padding-top: 50px
            padding-bottom: 50px

            +below('tablet'){
                padding-top: 25px
                padding-bottom: 25px
            }

            +below('mobile'){
                display: block
            }
        }

        &-title{
            position: relative

            font-size: 3.6rem
            font-weight: bold
            color: black
            white-space: nowrap
            margin-right: 25px

            +below('mobile'){
                font-size: 2.4rem
                display: inline-block
                margin-right: 0
                margin-bottom: 20px
            }

            &::after {
                content: ''
                position: absolute
                top: 24px
                left: 0
                width: 130px
                height: 15px
                background-color: $projetotesteGreenDark
                z-index: -1

                +below('mobile'){
                    top: 15px
                    height: 10px
                }
            }
        }

        form.search-form{
            overflow hidden
            border: 1px solid $gray3
            border-radius: 3px
            position relative
            display: flex
            padding: 5px 15px
            width: 330px
            height: 40px

            +below('mobile'){
                width: 100%
            }

            input{
                outline: 0
                border: 0
                
                &:focus{
                    outline: 0
                    border: 0
                }

                &:not([type=submit]){
                    width: 100%
                    flex: 1
                    outline 0
                    border: 0
                    margin-right: 10px
                    font-size: 1.6rem
                    color: $gray0

                    &[type=search]::-webkit-input-placeholder { 
                        color: lightness($gray2, 50%); 
                        font-size: 1.6rem; 
                    }
                    &[type=search]::-moz-placeholder { 
                        color: lightness($gray2, 50%); 
                        font-size: 1.6rem; 
                    }
                    &[type=search]:-ms-input-placeholder { 
                        color: lightness($gray2, 50%); 
                        font-size: 1.6rem; 
                    }
                    &[type=search]:-moz-placeholder { 
                        color: lightness($gray2, 50%); 
                        font-size: 1.6rem; 
                    }
                }

                &[type=submit]{
                    border: 0
                    width: 28px
                    height: 28px
                    background: transparent
                    cursor pointer
                }
            }

            svg {
                position: absolute
                top: 8px
                right: 16px
                width: 24px
                height: 24px
                z-index: -1

                path{
                    fill: lightness($gray2, 80%)
                }
            }
        }
    }

    &__content{

        > .container{
            display: flex
            justify-content: space-between

            +below('tablet'){
                flex-direction: column
            }
        }
    }

    &__navigation{
        margin-top: 100px
        flex-basis: 290px
        margin-right: 20px
        
        +below('tablet'){
            flex-direction: column
            flex: 1
            margin: 45px 0
        }

        +below('mobile'){
            margin: 10px 0 40px
        }

        &-title {
            font-size 1.8rem
            margin 0 0 30px 0
            line-height: initial
            white-space: nowrap

            +below('tablet'){
                margin 0 0 15px 0
            }
        }

        &-cat{
            font-size 1.8rem
            font-weight: 500
            color: $projetotesteGreen
            line-height: 1.5
            margin-bottom: 20px

            +below('tablet'){
                font-size 1.6rem
                line-height: initial
            }
        }

        &-categories {

            +below('tablet'){
                display: flex
                overflow-x: scroll
                white-space: nowrap
                width: calc(100% + 50px)
                margin-left: -25px
                margin-right: -25px
                padding-left: 25px
                padding-right: 25px

                &::-webkit-scrollbar {
                    height: 0
                }
            }

            li {
                display block
                overflow: hidden

                & + li {
                    margin-top: 20px

                    +below('tablet'){
                        margin-top: 0
                    }
                }

                +below('tablet'){
                    overflow: initial
                    margin-right: 20px

                    &:last-of-type{
                        padding-right: 25px
                    }
                }

                a {
                    font-size 1.8rem
                    font-weight: 500
                    color: black
                    line-height: 1.5
                    transition: .2s ease-in-out
                    text-stroke: .25px white
                    -webkit-text-stroke: .25px white

                    &:hover{
                        color: $projetotesteGreen !important
                        text-stroke: .25px $projetotesteGreen
                        -webkit-text-stroke: .25px $projetotesteGreen
                    }

                    &:visited{
                        color: black
                    }

                    +below('tablet'){
                        font-size 1.6rem
                        line-height: initial
                    }
                }

                // &.active{

                //     > a {
                //         color $darkOrange
                //         text-stroke: 1px $darkOrange
                //         -webkit-text-stroke: 1px $darkOrange

                //         +below('small-tablet'){
                //             border-left: 2px solid $darkOrange
                //             padding-left: 20px
                //             color $darkOrange
                //             text-stroke: 1px $darkOrange
                //             -webkit-text-stroke: 1px $darkOrange
                //         }

                //         &:hover{
                //             +below('small-tablet'){
                //                 border-left: 2px solid $darkOrange
                //             }
                //         }
                //     }
                // }
            }
        }
    }

    &__posts{
        flex: 1

        &-list{

            article {
                display: flex
                align-items: center

                & + article{
                    margin-top: 60px

                    +below(768px){
                        margin-top: 45px
                    }
                }

                +below(768px){
                    flex-direction: column
                }

                .site-blog__article{

                    &-thumbnail{
                        width: 300px
                        height: 160px
                        margin-right: 30px
                        // overflow hidden
                        cursor pointer

                        +below(768px){
                            width: 100%
                            margin-right: 0
                            margin-bottom: 10px
                        }

                        img{
                            display: block
                            width: inherit
                            height: inherit
                            object-fit: cover
                        }
                    }

                    &-title-categories{
                        display: flex
                        align-items: center

                        +below('mobile'){
                            display: block
                        }

                        > h2 {
                            font-size: 1.8rem
                            font-weight bold
                            color: black
                            border-right: 3px solid black
                            padding-right: 10px
                            margin-right: 10px

                            +below('mobile'){
                                width: 100%
                                font-size: 1.4rem
                                border: 0
                                padding-right: 0
                                margin-right: 0
                                margin-bottom: 16px
                            }
                        }

                        > ul {
                            display: flex
                            overflow: hidden
                            flex-wrap: wrap

                            li{
                                line-height: 1.5
                                margin-right: 15px

                                a{
                                    font-size: 1.4rem
                                    color: $projetotesteGreen
                                }
                            }
                        }
                    }

                    &-body{
                        font-size: 1.4rem
                        font-weight: 300
                        color: black
                        line-height: 1.4
                        margin: 15px 0
                    }

                    &-continue{
                        font-size: 1.4rem
                        font-weight: bold
                        color: black
                        line-height: 1.4
                        border-bottom: 3px solid $projetotesteGreen
                    }
                }

                &:first-child{
                    display: block

                    .site-blog__article{

                        &-thumbnail{
                            width: 100%
                            height: 333px
                            margin-right: 0
                            margin-bottom: 30px

                            +below(768px){
                                height: 160px
                                margin-bottom: 10px
                            }
                        }

                        &-body{
                            max-width: 550px
                        }
                    }
                }
            }

            .site-blog__list{
                overflow hidden

                a{
                    display: inline-block
                    overflow: hidden
                }
            }
        }

        &-pagination{
            width: 100%
            margin: 80px auto

            +below('small-tablet'){
                margin: 35px auto
            }

            .navigation.pagination .nav-links{
                text-align: center

                .page-numbers{
                    display: inline-block
                    font-family: 'Montserrat', sans-serif
                    font-size: 1.8rem
                    color: $gray0
                    margin: 0 9px

                    &.prev,
                    &.next{
                        font-size: 2.5rem;
                    }
                    &.current,
                    &:hover{
                        color: $projetotesteGreen
                    }
                }
            }
        }
    }

    &--archive,
    &--author,
    &--category,
    &--search,
    &--tag{
        
        .site-blog__posts{
            
            &-list{
                article:first-child{
                    display: flex
                    align-items: center

                    .site-blog__article{

                        &-thumbnail{
                            width: 300px
                            height: 160px
                            margin-right: 30px
                            margin-bottom: 0

                            +below(768px){
                                width: 100%
                                margin-right: 0
                                margin-bottom: 10px
                            }
                        }

                        &-body{
                            max-width: 100%
                        }
                    }
                }
            }
        }
    }

    &--single{

        &__header{
            overflow: hidden

            > .container{

                > div {

                    &:nth-child(1),
                    &:nth-child(3){
                        column(1/6, $gutter: 0)
                    }

                    &:nth-child(2){
                        column(4/6, $gutter: 0)
                    }
                }
            }

            &-title{
                font-size: 4rem
                font-weight bold
                color: black
                line-height: 1.5
                margin-bottom: 40px

                +below('tablet'){
                    font-size: 3rem
                    margin-bottom: 25px
                }
            }

            &-info{
                display: flex
                flex-wrap: wrap
                align-items: center

                +below('tablet'){
                    display: block
                    margin-bottom: 6px
                }

                > p {
                    font-size: 1.8rem
                    color: black
                    border-right: 2px solid black
                    padding-right: 10px
                    margin-right: 10px

                    +below('tablet'){
                        font-size: 1.6rem
                        border-right: 0
                        padding-right: 0
                        margin-right: 0
                        margin-bottom: 10px
                    }
                }

                > ul {
                    overflow: hidden
                    display: flex
                    flex-wrap: wrap
                    align-items: center

                    li{
                        line-height: 1.5
                        margin-right: 15px

                        a{
                            font-size: 1.8rem
                            color: $projetotesteGreen

                            +below('tablet'){
                                font-size: 1.6rem
                            }
                        }
                    }
                }
            }

            &-author{
                font-size: 1.8rem
                color: black

                > a{
                    color: black
                    line-height: 1.4
                    transition: .2s ease-in-out

                    &:hover{
                        color: $projetotesteGreen !important
                    }                 

                    &:visited{
                        color: black
                    }
                }

                +below('tablet'){
                    font-size: 1.6rem
                }
            }
        }

        &__thumbnail{
            width 100%
            max-width 1520px
            margin 50px auto 100px
            padding: 0 30px

            +below('tablet') {
                margin 25px auto 50px
                padding 0
            }

            img{
                display: block
                object-fit: cover
                width: inherit
                height: inherit
            }
        }

        &__content{
            overflow: hidden

            > .container{

                > div {

                    &:nth-child(1),
                    &:nth-child(3){
                        column(1/6, $gutter: 0)
                    }

                    &:nth-child(2){
                        column(4/6, $gutter: 0)
                    }
                }
            }

            &-addtoany{
                overflow: hidden
                min-height: 1px
                display: flex
                justify-content: flex-end

                .addtoany_shortcode{
                    width: inherit
                    float: inherit
                    margin-top: 10px
                    margin-right: 110px

                    +below('tablet'){
                        display: none
                    }

                    .addtoany_list{
                        display block
                        width: 100%

                        > a{
                            display block
                            
                            & + a{
                                margin-top: 30px
                            }

                            > img {
                                width: 20px
                                height 20px
                                margin: 0
                            }
                        }
                    }

                }
            }

            // aqui vai todos os resets dos elementos do Gutemberg, incluído imagens e listas
            // título do post font-size: 4rem; line-height: 1.3;

            h1, h2, h3, h4, h5, h6{
                font-family: 'Montserrat', sans-serif
                font-weight: bold
                margin-bottom: 50px
                line-height: 30px
                color: black

                +below('mobile'){
                    margin-bottom: 30px
                    line-height: 25px
                }
            }

            h1{
                font-size: 3.8rem

                +below('mobile'){
                    font-size: 3.4rem
                }
            }

            h2{
                font-size: 3.4rem

                +below('mobile'){
                    font-size: 3rem
                }
            }

            h3{
                font-size: 3rem

                +below('mobile'){
                    font-size: 2.6rem
                }
            }

            h4{
                font-size: 2.6rem

                +below('mobile'){
                    font-size: 2.2rem
                }
            }

            h5{
                font-size: 2.2rem

                +below('mobile'){
                    font-size: 1.8rem
                }
            }

            h6, p, li {
                font-size: 1.8rem
                font-family: 'Montserrat', sans-serif
                color: black
                line-height: 30px

                +below('mobile'){
                    font-size: 1.4rem
                    line-height: 21px
                }            
            }

            p {
                margin-bottom: 30px

                +below('tablet'){
                    margin-bottom: 20px
                }

                &:last-child{
                    margin-bottom: 0
                }
            }

            ol,
            ul{
                margin-bottom: 30px

                +below('tablet'){
                    margin-bottom: 20px
                }

                li{
                    font-weight: normal
                }
            }
            ol{
                padding-left: 20px
                list-style: decimal
            }
            ul{
                padding-left: 22px
                list-style: disc
            }

            a{
                font-family: 'Montserrat', sans-serif
                color: $projetotesteGreen
                transition: .2s

                &:hover{
                    text-decoration: underline 
                }

                &:visited{
                    color: $projetotesteGreen
                }

                +below('small-tablet'){
                    line-height: initial
                }       
            }

            figure{
                display: block
                width: 100%
                margin: 30px 0

                +below('mobile'){
                    margin: 20px 0
                }

                > ul{
                    padding-left: 0
                    margin-bottom: -15px !important
                    overflow: hidden

                    figure{
                        img{
                            margin: 0
                        }
                    }
                }

                > img {
                    display: block
                    width: 100%
                    margin: 0 0 20px

                    +below('mobile'){
                        margin-bottom: 10px
                    }
                }
            }

            img {
                display: block
                width: 100%
                margin: 30px 0

                +below('mobile'){
                    margin: 20px 0
                }
            }
        }

        &__footer{
            margin: 120px 0

            +below('small-tablet'){
                margin: 60px 0
            }

            &-title{
                position: relative

                display: inline-block
                font-size: 4rem
                font-weight: bold
                color: black
                white-space: nowrap
                margin-bottom: 50px

                +below('mobile'){
                    font-size: 2.4rem
                    margin-bottom: 25px
                }

                &::after {
                    content: ''
                    position: absolute
                    top: 24px
                    left: 0
                    width: 130px
                    height: 15px
                    background-color: $projetotesteGreenDark
                    z-index: -1

                    +below('mobile'){
                        top: 15px
                        height: 10px
                    }
                }
            }

            &-list{
                overflow hidden

                > li{
                    column(1/3, $cycle: 3, $gutter: 2.5)

                    +below('small-tablet'){
                        border-bottom: 1px solid $gray3
                        padding-bottom: 25px
                        margin-bottom: 25px
                        column(1, $cycle: 1, $gutter: 0)

                        &:last-child{
                            border: 0
                            padding-bottom: 0
                            margin-bottom: 0
                        }
                    }

                }
                
                &-thumbnail{
                    width: 100%
                    height: 226px

                    +below('small-tablet'){
                        height: 300px
                    }

                    +below(768px){
                        height: 160px
                    }

                    a{
                        display block
                        width: inherit
                        height: inherit
                        overflow hidden

                        img{
                            display: block
                            width: inherit
                            height: inherit
                            object-fit: cover
                        }
                    }
                }

                &-category{
                    display: flex
                    flex-wrap: wrap
                    margin-top: 15px

                    li {
                        width: initial
                        margin-right: 25px !important
                        margin-bottom: 5px
                        
                        &:last-child{
                            margin-right: 0
                        }

                        a{
                            font-size: 1.4rem
                            font-weight: 300
                            color: $darkOrange
                        }
                    }
                }

                &-title{
                    font-size: 1.8rem
                    font-weight: 700
                    color: black
                    line-height: 1.4
                    margin-top: 20px
                }

                &-body{
                    font-size: 1.4rem
                    font-weight: 300
                    color: black
                    line-height: 1.4
                    margin: 10px 0
                }

                &-continue{
                    display: inline-block
                    font-size: 1.4rem
                    font-weight: bold
                    color: black
                    line-height: 1.4
                    border-bottom: 3px solid $projetotesteGreen
                }
            }
        }
    }
}

body.search.search-no-results .site-blog__content{
    padding-bottom: 80px
}