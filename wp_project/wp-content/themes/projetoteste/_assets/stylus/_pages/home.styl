.section_home{
    height: 600px;
    position: relative;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;

    > .container{
        text-align: center;
    }

    &__image{
        position absolute;
        height: 100%;
        object-fit: cover;
        width: 100%;
        z-index: 0;
        display: block;
    }

    &__title{ 
        font-size: 4rem;
        position: relative;
        z-index: 1;
    }
    &__subtitle{
        font-size: 2.5rem;
        position: relative;
        z-index: 1;
    }
    &__list{
        position: relative;
        display: flex;
        justify-content: space-around;
        border: 1px solid red;
        z-index: 1;

        li{
            a{
                color:red;
                padding: 30px;
                font-size: 25px;
            }
        }
    }
}